@{
}

<h1>Add a person for @Model["experience"].Title</h1>

@foreach (var attachedPerson in Model["attachedPeople"])
{
    <p class="allCaps">@attachedPerson.Name</p>
}

<hr /> 

<h4>Click to add.</h4>

@foreach (var unattachedPerson in Model["unattachedPeople"])
{
    <p class="smallCaps">
        <a href="@Url.Action("AttachPersonSave", new { id = unattachedPerson.PersonId, experience = Model["experience"] })">
            @unattachedPerson.Name
        </a>
    </p>
}
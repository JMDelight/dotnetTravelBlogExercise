@model TravelBlog.Models.Experience

@{
    ViewData["Title"] = "Add Experience";
}

<h2>Edit</h2>
<hr />
<h4>Update <span class="smallCaps">@Model.Title</span></h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ExperienceId)

    @Html.LabelFor(model => model.Title)
    @Html.EditorFor(model => model.Title)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.Date)
    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @type = "date" } })

    @Html.LabelFor(model => model.LocationId)
    @Html.DropDownList("LocationId")

    <input type="submit" value="Edit" class="btn btn-default" />
}

@Html.ActionLink("Back to List", "Index")

